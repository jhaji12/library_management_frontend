{
  "name": "library_management_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start-electron": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "package": "electron-builder build --win -c.extraMetadata.main=dist/main.js --publish never",
    "publish": "electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.demo.about",
    "copyright": "Copyright demo.com",
    "publish": {
      "provider": "github",
      "private": false,
      "owner": "jyotijha"
    },
    "mac": {
      "publish": {
        "provider": "github",
        "owner": "demo",
        "repo": "Repository Name",
        "private": false,
        "token": ""
      }
    },
    "win": {
      "publish": {
        "provider": "github",
        "owner": "demo",
        "repo": "Repository Name",
        "private": false,
        "token": ""
      },
      "publisherName": "demo"
    },
    "linux": {
      "category": "Utility"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "nsis": {
      "installerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "framer-motion": "^11.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.1.0",
    "react-router-dom": "^6.23.0",
    "react-scripts": "^5.0.1",
    "vercel": "^34.1.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "vite": "^5.2.0"
  }
}
